# FileSvr 配置示例
# 复制为 filesvr.conf 后按需修改；环境变量 FILESVR_* 可覆盖

host=0.0.0.0
grpc_port=9100
http_port=8080

store_type=rocksdb
rocksdb_path=/data/file-meta

storage_path=/data/files
storage_type=local
# minio_endpoint=
# minio_access_key=
# minio_secret_key=
minio_bucket=swift-files

# 单文件上限（字节），默认 1GB
max_file_size=1073741824
allowed_types=image/*,video/*,audio/*,application/pdf
# 上传会话过期（秒），超时未续传完成则放弃并通知 ChatSvr 标为发送失败
upload_session_expire_seconds=86400

log_dir=/data/logs
log_level=INFO

# JWT 校验（鉴权用）；生产环境建议用环境变量 FILESVR_JWT_SECRET
# jwt_secret=
